{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Avicenna Documentation",
  "colors": {
    "primary": "#005446",
    "dark": "#03b295",
    "light": "#03b295"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Workshop",
            "pages": [
              "workshop-overview",
              "query-parameters",
              {
                "group": "Actions",
                "icon": "hammer",
                "pages": [
                  "guides/workshop/actions/send-external-request",
                  "guides/workshop/actions/manipulate-text",
                  "guides/workshop/actions/manipulate-image",
                  "guides/workshop/actions/encode-text",
                  "guides/workshop/actions/decode-text",
                  "guides/workshop/actions/set-variable",
                  "guides/workshop/actions/generate-text"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "hidden": true,
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/images/avicenna-text-duallogo.png",
    "href": "https://www.avicenna.dev/"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@avicenna.dev"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity"
   ]
  },
  "footer": {
    "socials": {
      "discord": "https://discord.gg/c5Zaj2PJRk",
      "website": "https://www.avicenna.dev/"
    }
  },
  "appearance": {
    "strict": true,
    "default": "dark"
  },
  "background": {
    "decoration": "grid"
  },
  "thumbnails": {
    "appearance": "dark",
    "background": "/images/hero-bg1-lowopac.jpeg",
    "fonts": {
      "family": "Lato"
    }
  },
  "styling": {
    "latex": false
  },
  "icons": {
    "library": "lucide"
  },
  "description": "Complete, organized reference for Avicenna's features, Workshop, settings, and more!",
  "banner": {
    "content": "This documentation is still under construction! Please excuse any faults or inaccuracies.",
    "dismissible": true
  },
  "errors": {
    "404": {
      "title": "Whoops, looks like you're lost!"
    }
  },
  "seo": {
    "indexing": "all"
  },
  "search": {
    "prompt": "Search the Avicenna Docs..."
  },
  "fonts": {
    "family": "Lato"
  }
}
